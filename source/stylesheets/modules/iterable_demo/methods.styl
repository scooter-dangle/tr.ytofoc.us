// methods

.methods
  $small-type()
  $code-fonts()

  .args:not(:empty)
    &::before
      content: '('
    &::after
      content: ')'
  .result:not(:empty)
    &::before
      content: '# => '
  .is-empty
    display: none

.yield figcaption
  font-family: Amethysta, Georgia, serif
  font-style: italic

